
<section class="h-100 gradient-form" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-10">
        <div class="card rounded-3 text-black">
          <div class="row g-0">
            <div class="col-lg-12">
              <div class="card-body p-md-5 mx-md-4">

                <div class="text-center">
                  <h4 class="mt-1 mb-5 pb-1">Rails CRUD</h4>
                </div>

                <%= form_with model: @user, url: sign_up_path do |f| %>
                  <p>Create new account</p>

                  <div class="form-outline mb-4">
                    <%= f.text_field :username, placeholder: "Username", class: "form-control" %>
                  </div>
                  <div class="form-outline mb-4">
                    <%= f.text_field :email, placeholder: "Email", class: "form-control" %>
                  </div>

                  <div class="form-outline mb-4">
                    <%= f.password_field :password, placeholder: "Password",  class: "form-control" %>
                  </div>

                  <div class="form-outline mb-4">
                    <%= f.password_field :password_confirmation, placeholder: "Password confirmation",  class: "form-control" %>
                  </div>

                  <div class="text-center pt-1 mb-5 pb-1">
                    <%= f.submit 'Sign Up', class: "btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" %>
                  </div>

                <% end %>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%= stylesheet_link_tag "login" %>